<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bulmeong.basecamp.club.mapper.ClubSqlMapper">

    <!-- 소모임 생성 -->
    <insert id="insertClubDto">

        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select max(id) from bc_club
        </selectKey>

        insert into bc_club(
            user_id, 
            region_id, 
            name, 
            description, 
            capacity, 
            main_image
        )values(
            #{user_id}, 
            #{region_id}, 
            #{name}, 
            #{description}, 
            #{capacity}, 
            #{main_image}
        )
    </insert>


    <!-- 소모임 가입조건 -->
    <insert id="insertClubJoinCondition">
        insert into bc_club_join_condition(
            club_id, min_age, max_age, gender
        )values(
            #{club_id},#{min_age},#{max_age},#{gender}
        )
    </insert>

    <!-- 게시글 작성 -->
    <insert id="insertClubPostDto">

        <selectKey resultType="int" keyProperty="id" order="AFTER">
            select max(id) from bc_club_post
        </selectKey>
        
        insert into bc_club_post(
	        club_id, 
            user_id, 
            category_id, 
            title, 
            content, 
            read_count
        )values(
	        #{club_id},
            #{user_id}, 
            #{category_id},
            #{title}, 
            #{content}, 
            0
        )
    </insert>

    <!-- 게시글 사진 첨부 -->
    <insert id="insertClubPostImage">
        insert into bc_club_post_image (
	        post_id, post_img_location
        )values(
            #{post_id},#{post_img_location} 
        )
    </insert>


    <!-- 소모임 회원 가입 -->
    <insert id="insertClubMemberDto">
        insert into bc_club_member(
	        club_id, 
            user_id, 
            role_id
        )values(
	        #{club_id}, 
            #{user_id}, 
            #{role_id} 
        )
    </insert>

    <!-- 지역 카테고리 -->
    <select id="selectRegionCategory" resultType="com.bulmeong.basecamp.club.dto.ClubRegionCategoryDto">
        select * from bc_club_region_category
    </select>

    <!-- 게시글 각가의 카테고리 (by id) -->
    <select id="selectPostCategoryDtoById" resultType="com.bulmeong.basecamp.club.dto.ClubPostCategoryDto">
        select * from bc_club_post_category
        where id = #{id}
    </select>

    <!-- 게시글 카테고리 -->
    <select id="selectPostCategoryDto" resultType="com.bulmeong.basecamp.club.dto.ClubPostCategoryDto">
    select * from bc_club_post_category
    </select>



    <!-- 소모임 목록 뽑기 -->
    <select id="selectClubList" resultType="com.bulmeong.basecamp.club.dto.ClubDto">
        select * from bc_club
    </select>

    <!-- 가입한 소모임 목록 뽑기 (by user_id) -->
    <select id="selectJoinClubList" resultType="com.bulmeong.basecamp.club.dto.ClubDto">
        select * from bc_club
        where user_id = #{user_id}
    </select>

    <!-- 각 소모임의 게시판 글 목록 뽑기 -->
    <select id="selectClubPostDtoList" resultType="com.bulmeong.basecamp.club.dto.ClubPostDto">
        select * from bc_club_post
        where club_id = #{club_id}
        order by id desc;
    </select>

    <select id="selectUserDtoById" resultType="com.bulmeong.basecamp.user.dto.UserDto">
    select * from bc_user 
    where id = #{id}
    </select>

    <!-- 이미지dto 리스트 뽑기 -->
    <select id="selectPostImageDtoList" resultType="com.bulmeong.basecamp.club.dto.ClubPostImageDto">
        select * from bc_club_post_image;
    </select>

    <!-- 게시글DTO 가져오기 -->
    <select id="selectPostDtoById" resultType="com.bulmeong.basecamp.club.dto.ClubPostDto">
        select * from bc_club_post
        where id = #{id}
    </select>

    <!-- 게시글 댓글 인서트 -->
    <insert id="insertClubPostCommentDto">
        insert into bc_club_post_comment(
	        post_id, user_id, content
        )values(
            #{post_id}, #{user_id}, #{content}
        )
    </insert>

    <!-- 게시글 댓글 DTO 가져오기 by post_id -->
    <select id="selectPostCommentDto" resultType="com.bulmeong.basecamp.club.dto.ClubPostCommentDto">
        select * from bc_club_post_comment
        where post_id = #{post_id}
    </select>

    <!-- 하나의 소모임 DTO 가져오기 by id -->
    <select id="selectClubDtoById" resultType="com.bulmeong.basecamp.club.dto.ClubDto">
        select * from bc_club
        where id = #{id}
    </select>

    <!-- 카테고리 DTO 가져오기 by id-->
    <select id="selectRegionCategoryDtoById" resultType="com.bulmeong.basecamp.club.dto.ClubRegionCategoryDto">
        select * from bc_club_region_category
        where id=#{id}
    </select>

    <!-- 소모임 북마크 여부 확인 select  -->
    <select id="confirmBookmark" resultType="int">
        select count(*) from bc_club_bookmark
        where club_id = #{club_id}
        and user_id = #{user_id}
    </select>
    

    <!-- 소모임 북마크 여 delete -->
    <delete id="deleteBookmark">
        delete from bc_club_bookmark
        where club_id=#{club_id} 
        and user_id=#{user_id}
    </delete>

    <!-- 소모임 북마크 부 insert -->
    <insert id="insertBookmark">
        insert into bc_club_bookmark(
            club_id, user_id
        )values(
            #{club_id}, #{user_id}
        ); 
    </insert>
    







</mapper>