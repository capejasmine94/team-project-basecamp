<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bulmeong.basecamp.secondHandProduct.mapper.LocationSqlMapper">

    <!-- 내위치 등록    -->
    <insert id="insertMyLocation">
        INSERT INTO bc_secondhand_location (user_id , selected_area_name) values (#{user_id}, #{selected_area_name})
    </insert>

    <!-- 위치 등록 확인 -->
    <select id="isAreaName" resultType="int">
        SELECT COUNT(*) FROM bc_secondhand_location WHERE user_id = #{user_id}
    </select>

    <!-- 선택 지역 받아오기 -->
    <select id="selectMyLocation" resultType="String">
        SELECT selected_area_name FROM bc_secondhand_location WHERE user_id = #{user_id}
    </select>

    <!-- 선택 지역 업데이트 -->
    <update id="updateMyLocation">
        UPDATE bc_secondhand_location
        SET
            selected_area_name = #{selected_area_name}
        WHERE user_id = #{user_id}
    </update>

</mapper>
